<div class="photo-description" data-id="photo-<%= @photo.id %>">
	<% if @photo.description.nil? %>
	<div class="meta-description" data-id="photo-<%= @photo.id %>" style="color:#BDBDBD">
		Click here to add a description
	</div>
	<% elsif @photo.description.length > 0 %>
	<div class="meta" data-id="photo-<%= @photo.id %>">
		<%= @photo.description %>
	</div>
	<% else %>
	<div class="meta" data-id="photo-<%= @photo.id %>" style="color:#BDBDBD">
		Click here to add a description
	</div>
	<% end %>
</div>