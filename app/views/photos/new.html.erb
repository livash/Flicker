<div class="new-photo-form">
	<h2>Upload your photo here:</h2>
	<% if @photo.errors.size > 0 %>
		<div class="error-messages">
			<%= @photo.errors.full_messages %>
		</div>
	<% end %>

	<form action="<%= photos_url %>" method="post" enctype="multipart/form-data">
	
		<input type="hidden" 
			name="authenticity_token" 
			value="<%= form_authenticity_token %>">
	
		<label for="photo_image_file">File:</label>
		<input type="file" 
			name="photo[image]" 
			id="photo_image_file">
		<br>
	
		<label for="photo_title">Title:</label>
		<input type="text" 
			name="photo[title]" 
			value="<%= @photo.title %>" id="photo_title">
		<br>
	
		<label for="photo_description">Description:</label>
		<input type="text" name="photo[description]" 
		value="<%= @photo.description %>" id="photo_description">
		<br>
	
		<!-- <label for="photo_tag">Tag</label>
		<input type="text" 
			name="photo[tag]" 
			value="<%#= @photo.tag %>" 
			id="photo_tag">
		<br>	 -->
		<input type="submit" value="Upload">
	
	</form>

</div>