<form action="<%= albums_url%>" method="post" class="form-horizontal control-group">
	<input type="hidden"
			name="authenticity_token"
			value="<%= form_authenticity_token %>">

	<label for="album_title">Title:</label>
	<input type="text" name="album[title]" id="album_title">
	<br>
	<label for="album_description">Description:</label>
	<input type="text" name="album[description]" id="album_description">
	<input type="submit" value="Add Album">
</form>
