<h1>Your photo albums:</h1>
<% @albums.each do |album| %>
<div class="album-tile">
	<table>
		<tr><td>
			<% if album.photos.first %>
			<a href="<%= album_url(album)%>">
				<%= image_tag serve_photo_url(album.photos.first), :class => "album-first-photo" %>
			</a>
			<% else %>
				<%= image_tag serve_photo_url(Photo.find(30)), :class => "album-first-photo" %>
			<% end %>
		</td></tr>
		<tr><td>
			<%= album.title %>, <%=album.photos.count%> photos
		</td></tr>
	</table>
</div>
<% end %>
<br>
<div class='new-album-form'>
	<%= render partial: "album_form" %>
</div>
