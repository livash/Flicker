<!-- Modal GUEST -->
<div id="guest" 
	class="modal hide fade sign-in-up-div animated pulse" 
	tabindex="-1" 
	role="dialog" 
	aria-labelledby="myModalLabel" 
	aria-hidden="true">
	
	<h2>You are signing in as a Guest</h2>
	<form accept-charset="UTF-8" 
		action="/users/sign_in" 
		class="new_user" 
		id="new_user" 
		method="post">
		<div style="margin:0;padding:0;display:inline">
			<!-- <input name="utf8" type="hidden" value="&#x2713;" /> -->
			<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
		</div>
		<div class="hidden">
			<label for="user_email" style="font-weight:bold">Email</label><br />
			<input autofocus="autofocus" id="user_email" name="user[email]" size="30" type="email" value="guest@example.com" />
		</div>
		<div class="hidden">
			<label for="user_password" style="font-weight:bold">Password</label><br />
			<input id="user_password" name="user[password]" size="30" type="text" value="12345678"/>
		</div>

		<div class="hidden">
			<input name="user[remember_me]" type="hidden" value="0" />
			<input id="user_remember_me" name="user[remember_me]" type="checkbox" value="1" /> 
			<label for="user_remember_me" style="font-weight:bold">Remember me</label>
		</div>

		<div>
			<input name="commit" type="submit" value="OK" class="btn-large"/>
		</div>
	</form>

	<a href="/users/sign_up">Sign up</a><br />
</div>


